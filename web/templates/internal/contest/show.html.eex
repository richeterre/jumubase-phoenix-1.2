<h2><%= name(@contest) %></h2>

<h3> <%= gettext("Contest categories") %> </h3>
<ul>
  <%= for contest_category <- @contest.contest_categories do %>
    <li>
      <%= contest_category.category.name %>
      <%= age_group_badge_tag(age_group_range(contest_category)) %>
    </li>
  <% end %>
</ul>

<%= link gettext("List performances"),
  to: internal_contest_performance_path(@conn, :index, @contest),
  class: "btn btn-default" %>
