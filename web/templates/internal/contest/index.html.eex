<h2><%= gettext("Contests") %></h2>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th><%= gettext("Name") %></th>
      <th><%= gettext("Country code") %></th>
      <th><%= gettext("Duration") %></th>
      <th><%= gettext("Signup deadline") %></th>
    </thead>
    <tbody>
      <%= for contest <- @contests do %>
        <tr>
          <td><%= link name(contest), to: internal_contest_path(@conn, :show, contest) %></td>
          <td><%= contest.host.country_code %></td>
          <td><%= "#{contest.start_date}â€“#{contest.end_date}" %></td>
          <td><%= contest.signup_deadline %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= if authorized?(Jumubase.Contest, :new, @current_user), do:
  link gettext("Add Contest"), to: internal_contest_path(@conn, :new),
  class: "btn btn-primary" %>
